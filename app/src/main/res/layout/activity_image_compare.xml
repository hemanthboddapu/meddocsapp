<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    tools:context=".ImageCompareActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Image Comparison Area - Full Screen -->
        <LinearLayout
            android:id="@+id/comparison_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp">

            <!-- Left Image (Before) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/left_image_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/black">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/left_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />

                    <!-- Before Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_hint_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="BEFORE"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <!-- File Name Label -->
                    <TextView
                        android:id="@+id/left_image_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#80000000"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="Tap to select"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Right Image (After) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/right_image_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/black">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.chrisbanes.photoview.PhotoView
                        android:id="@+id/right_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />

                    <!-- After Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|start"
                        android:layout_margin="4dp"
                        android:background="@drawable/status_badge_active"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="AFTER"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <!-- File Name Label -->
                    <TextView
                        android:id="@+id/right_image_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="#80000000"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:text="Tap to select"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Instructions Overlay (initially visible, hides after interaction) -->
        <LinearLayout
            android:id="@+id/instructions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:background="#CC000000"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“· Image Comparison"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="â€¢ Tap images to select\nâ€¢ Pinch to zoom independently\nâ€¢ Use toolbar menu for tools"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dismiss_instructions_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Got it"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <!-- Floating Action Buttons - Bottom Right -->
        <LinearLayout
            android:id="@+id/fab_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Expandable Tools (hidden by default) -->
            <LinearLayout
                android:id="@+id/expanded_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:visibility="gone">

                <!-- Save Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:background="#80000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/save_comparison_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_save"
                        app:fabSize="mini"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Swap Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swap"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:background="#80000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/swap_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_swap"
                        app:fabSize="mini"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Rotate Left Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rotate Left"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:background="#80000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/rotate_left_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_rotate_left"
                        app:fabSize="mini"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Rotate Right Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rotate Right"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:background="#80000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/rotate_right_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_rotate_right"
                        app:fabSize="mini"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Landscape Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landscape"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:background="#80000000"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/landscape_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_screen_rotation"
                        app:fabSize="mini"
                        app:tint="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <!-- Main FAB (toggle tools) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/toggle_tools_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                app:tint="@color/white"
                app:backgroundTint="@color/colorPrimary" />

        </LinearLayout>

        <!-- Quick Save Button - Top Right (visible when both images selected) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/quick_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_save"
            android:contentDescription="Save comparison"
            app:tint="@color/white"
            app:backgroundTint="@color/statusActive"
            app:fabSize="normal"
            android:visibility="gone" />

        <!-- Image Selection Controls - Bottom Center -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <!-- Compact pill-style container for Before / After selectors -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_compare_selector_pill"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_left_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_compare_selector_left"
                    android:text="Before"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_add_photo"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_right_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_compare_selector_right"
                    android:text="After"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_add_photo"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="6dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

