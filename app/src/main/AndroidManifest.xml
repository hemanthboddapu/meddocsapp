<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <application
        android:name=".MedDocsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Meddocsapp">
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Meddocsapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEditPatientActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />
        <activity
            android:name=".PatientDetailActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />
        <activity
            android:name=".ImageViewActivity"
            android:parentActivityName=".PatientDetailActivity" />
        <activity
            android:name=".ImageCompareActivity"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />
        <activity
            android:name=".AudioRecorderActivity"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />
        <activity
            android:name=".TextNoteActivity"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />

        <activity
            android:name=".ShareActivity"
            android:exported="true"
            android:theme="@style/Theme.Meddocsapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeveloperSettingsActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />

        <activity
            android:name=".RecycleBinActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />

        <activity
            android:name=".PrivacyPolicyActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />

        <activity
            android:name=".BackupActivity"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/Theme.Meddocsapp.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>